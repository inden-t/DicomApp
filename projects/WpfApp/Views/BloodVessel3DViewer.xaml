<Window x:Class="DicomApp.Views.BloodVessel3DViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Blood Vessel Viewer"
        Height="450"
        Width="800">
  <Grid>
    <Viewport3D x:Name="viewport3D">
      <Viewport3D.Camera>
        <PerspectiveCamera Position="255,768,0"
                           LookDirection="0,-1,0"
                           UpDirection="0,0,-1"
                           FieldOfView="60"/>
      </Viewport3D.Camera>
      <ModelVisual3D x:Name="modelVisual">
        <ModelVisual3D.Content>
          <Model3DGroup x:Name="model3DGroup"/>
        </ModelVisual3D.Content>
      </ModelVisual3D>
      <ModelVisual3D>
        <ModelVisual3D.Content>
          <AmbientLight Color="White"/>
        </ModelVisual3D.Content>
      </ModelVisual3D>
    </Viewport3D>
  </Grid>
</Window>
