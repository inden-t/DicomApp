<RibbonTab x:Class="DicomApp.Views.BloodVesselExtractionRibbonTab"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           Header="血管抽出">
  <RibbonGroup Header="血管領域選択">
    <RibbonButton Label="血管領域選択"
                      Command="{Binding StartBloodVesselSelectionCommand}"/>
    <RibbonButton Label="3D塗りつぶし選択"
                      Command="{Binding Execute3DFillSelectionCommand}"/>

    <!--<ribbon:RibbonSlider Label="しきい値調整"
                               Minimum="0"
              Maximum="255"
              Value="{Binding ThresholdValue}"/>-->

    <RibbonButton Label="領域編集"
                      Command="{Binding EditRegionCommand}"/>
    <RibbonButton Label="領域削除"
                      Command="{Binding DeleteRegionCommand}"/>
  </RibbonGroup>

  <RibbonGroup Header="血管抽出">
    <RibbonButton Label="血管抽出"
                      Command="{Binding ExtractBloodVesselCommand}"/>
    <RibbonButton Label="モデル保存"
                      Command="{Binding SaveModelCommand}"/>
  </RibbonGroup>

  <RibbonGroup Header="操作">
    <RibbonButton Label="選択を破棄して終了"
                      Command="{Binding DiscardSelectionCommand}"/>
  </RibbonGroup>
</RibbonTab>
